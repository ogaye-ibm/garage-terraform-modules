{
  "name": "garage-terraform-modules",
  "version": "2.2.17",
  "description": "Terraform modules for IBM Garage Cloud-native Toolkit",
  "main": "index.js",
  "scripts": {
    "release": "release-it --verbose"
  },
  "release-it": {
    "git": {
      "tagName": "v${version}"
    },
    "github": {
      "release": true
    },
    "npm": {
      "publish": false,
      "ignoreVersion": true
    },
    "hooks": {
      "after:release": "echo Successfully released ${name} v${version} to ${repo.repository}."
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ogaye-ibm/garage-terraform-modules.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ogaye-ibm/garage-terraform-modules/issues"
  },
  "homepage": "https://github.com/ogaye-ibm/garage-terraform-modules#readme",
  "devDependencies": {
    "release-it": "^13.0.2"
  }
}
